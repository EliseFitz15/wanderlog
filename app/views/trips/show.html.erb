  <div class="small-6 small-offset-2 large-12 columns">
    <div class="container">
      <h1><%= @trip.title %></h1>
      <h3><%= @trip.description %></h3>
      <h6><%= @trip.startdate %></h6>
    <%= link_to image_tag("ic_mode_edit.png"),
    edit_trip_path(@trip), id: "edit-trip", method: :get %>
    <%= link_to image_tag("ic_delete.png"),
    trip_path(@trip), id: "delete-trip", method: :delete %>
    </div>
  </div>


    <ul>
      <li>
        <%= link_to image_tag("openbook.png", id: "icon"), new_trip_post_path(@trip), id: "new-post", method: :get %>
      </li>
      <li>
        <%= link_to image_tag("album.png", id: "icon"), new_trip_album_path(@trip), id: "new-album", method: :get %>
      </li>
      <li>
        <%= link_to image_tag("highlight.png", id: "icon"), trips_path, method: :get %>
      </li>
    </ul>


<div class="small-6 small-offset-2 columns">
  <div class="panel">
    <% @posts.each do |post| %>
    <h4><%= link_to post.headline, trip_post_path(@trip, post) %></h4>
    <h6><%= post.created_at %></h6>
    <p><%= post.content %></p>
    <% end %>
  </div>
</div>

  <% @albums.each do |album| %>
    <div class="trip-pics"><%= image_tag(album.photos[0]) %></div>
    <div class="trip-pics"><%= image_tag(album.photos[1]) %></div>
    <div class="trip-pics"><%= image_tag(album.photos[2]) %></div>
    <div class="trip-pics"><%= image_tag(album.photos[3]) %></div>
  <% end %>

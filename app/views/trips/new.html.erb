<div class="row">
  <div class="small-6 small-offset-3 columns">
    <h1 class="header">Where will you wander?</h1>
    <%= form_for @trip do |f| %>

    <div class="field">
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>
    <div class="field">
      <%= f.label :description %>
      <%= f.text_area :description %>
    </div>
    <div class="field">
      <%= f.label :startdate %>
      <%= f.date_field :startdate %>
    </div>
    <div class="field">
      <%= f.label :cover_photo, "Cover Photo" %><br />
      <%= f.file_field :cover_photo %>
    </div>

      <%= f.submit "Create Trip" %>

    <% end %>
  </div>
</div>

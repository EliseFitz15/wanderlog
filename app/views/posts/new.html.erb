<div class="row">
  <div class="small-6 small-offset-3 columns">
    <h1 class="header">New Post</h1>
    <%= form_for [@trip, @post] do |f| %>

      <%= f.label :headline %>
      <%= f.text_field :headline %>

      <%= f.label :content %>
      <%= f.text_area :content %>

      <%= f.submit "Create Post" %>

    <% end %>
  </div>
</div>

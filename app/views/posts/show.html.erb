<div class="small-6 small-offset-2 columns">
  <div class="container">
    <h4><%= @post.headline %></h4>
    <h6><%= @post.updated_at %></h6>
    <p><%= @post.content %></p>
    <%= link_to image_tag("edit-pencil.png", id: "icon"),
    edit_trip_post_path(@trip, @post), id: "edit-post", method: :get %>
    <%= link_to image_tag("trash-delete.png", id: "icon" ),
    trip_post_path(@trip, @post),
    data: { confirm: "Are you sure you want to delete this?" },
    id: "delete-post", method: :delete %>
  </div>
</div>

<%= image_tag "http://maps.google.com/maps/api/staticmap?size=450x300&sensor=false&zoom=16&markers=#{@highlight.latitude}%2C#{@highlight.longitude}" %>
<h4><%= @highlight.location_name %></h4>
<h6><%= @highlight.created_at.strftime("%b %d, %Y") %></h6>
<p><%= @highlight.memory %></p>
<%= image_tag(@highlight.highlight_photo) %>

<%= link_to image_tag("edit-pencil.png", id: "icon"),
edit_trip_highlight_path(@trip, @highlight), id: "edit-highlight", method: :get %>

<%= link_to image_tag("trash-delete.png", id: "icon"),
trip_highlight_path(@trip, @highlight), data: { confirm: "Are you sure you want to delete this?" }, id: "delete-highlight", method: :delete %>
